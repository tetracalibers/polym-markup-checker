{
  "name": "@polym/markup-checker",
  "description": "Collection of HTML element wrapper React components that detect and warn of HTML specification violations and inappropriate use of WAI-ARIA",
  "author": {
    "name": "tomixy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tetracalibers/polym-markup-checker.git"
  },
  "bugs": {
    "url": "https://github.com/tetracalibers/polym-markup-checker/issues"
  },
  "homepage": "https://tetracalibers.github.io/polym-markup-checker",
  "license": "MIT",
  "version": "1.1.0",
  "type": "module",
  "types": "./types/index.d.ts",
  "files": [
    "/dist",
    "/types"
  ],
  "main": "./dist/polym-markup-checker.umd.js",
  "module": "./dist/polym-markup-checker.es.js",
  "exports": {
    ".": {
      "import": "./dist/polym-markup-checker.es.js",
      "require": "./dist/polym-markup-checker.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "watch": "vite build --watch",
    "prepare": "yarn build",
    "preview": "vite preview",
    "lint": "eslint --ext .tsx,.ts src/",
    "lintfix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*.+(js|json|yml|ts|tsx)\"",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -s src/stories/assets"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@polym/react-props": "*",
    "@polym/story-cssdata": "*",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-storysource": "^6.5.12",
    "@storybook/addons": "^6.5.12",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/react": "^6.5.12",
    "@storybook/testing-library": "^0.0.13",
    "@storybook/theming": "^6.5.12",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@vitejs/plugin-react": "^2.1.0",
    "babel-loader": "^8.2.5",
    "csstype": "^3.1.1",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.4",
    "prettier": "^2.7.1",
    "react-lorem-ipsum": "^1.4.10",
    "typescript": "^4.6.4",
    "vite": "^3.1.0"
  },
  "dependencies": {
    "styled-components": "^5.3.5",
    "ts-pattern": "^4.0.5"
  }
}
